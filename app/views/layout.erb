  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>LibraryOfBooks</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <div class="wrapper" style="margin-left: 15px;">
    <p style="font-size:50px"> Fleet of Books </p>
    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
       <p style="color: red"> <%= flash[type] %></p>
      </div>
    <% end %>
        <%= yield %>
        <%if session[:user_id]%>
        <a href="/books/new">Add New Books Here</a><br>
        <a href="/books/all">Here Are All The Books</a><br>
        <a href="/logout">Log Out</a>
        <%end%>
      <footer class="branding">
        <hr><small>&copy; 2020 <strong>LibraryOfBooks</strong></small></hr>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
